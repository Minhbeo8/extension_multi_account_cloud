        .close-btn:hover { color: white; transform: scale(1.1); }
        .tab-info, .account-selector { background: rgba(0,0,0,0.15); border-radius: 12px; padding: 18px; margin-bottom: 18px; border: 1px solid rgba(255, 255, 255, 0.08); }
